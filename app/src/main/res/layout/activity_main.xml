<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_white_1000"
    tools:context=".MyActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="961dp"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:fillViewport="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center|top"
        android:background="@color/purple_500"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center|top"
                android:background="@drawable/supremezicon"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="320dp"
                    android:layout_height="220dp"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="6dp"
                    android:background="#fff"
                    style="@style/CardView.Light">

                    <RelativeLayout
                        android:layout_width="320dp"
                        android:layout_height="120dp">

                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Supremez."
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:maxLines="4"
                        android:textSize="18sp" />

                        <TextView
                            android:id="@+id/info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Supremez consists of a wide range of wallpapers"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:layout_marginTop="38dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:maxLines="4"
                            android:textSize="12dp"
                            android:minLines="1"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="and clock widgets selection and will be constantly"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:layout_marginTop="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:maxLines="4"
                            android:textSize="12dp"
                            android:minLines="1"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="updated with new widgets and wallpapers."
                            android:textColor="#000"
                            android:singleLine="false"
                            android:layout_marginTop="62dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:maxLines="4"
                            android:textSize="12dp"
                            android:minLines="1"
                            android:typeface="sans" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>

