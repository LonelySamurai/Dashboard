<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    tools:context=".MyActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="1200dp"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:fillViewport="true">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center|top"
        android:background="@color/blue_grey_500"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center|top"
                android:background="@drawable/supremezicon"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="false"
                android:layout_alignStart="@id/action_bar"
                android:paddingStart="@dimen/abc_action_bar_default_height_material" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="20dp"
                android:id="@+id/relativeLayout"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true"
                    android:background="#fff"
                    style="@style/CardView.Light">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Supremez."
                        android:textColor="#212121"
                        android:singleLine="false"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="16dp"
                        android:maxLines="4"
                        android:textSize="20sp"
                        android:typeface="normal" />

                        <TextView
                            android:id="@+id/info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Supremez consists of a wide range of wallpapers"
                            android:textColor="#212121"
                            android:singleLine="false"
                            android:layout_marginTop="44dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="16dp"
                            android:maxLines="4"
                            android:textSize="12dp"
                            android:minLines="1"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="and clock widgets selection and will be constantly"
                            android:textColor="#212121"
                            android:singleLine="false"
                            android:layout_marginTop="56dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="16dp"
                            android:maxLines="4"
                            android:textSize="12dp"
                            android:minLines="1"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="updated with new widgets and wallpapers."
                            android:textColor="#212121"
                            android:singleLine="false"
                            android:layout_marginTop="68dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="16dp"
                            android:maxLines="4"
                            android:textSize="12dp"
                            android:minLines="1"
                            android:typeface="normal" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

           </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true"
                android:background="#fff"
                style="@style/CardView.Light"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:onClick="wallpaper">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:id="@+id/imageView"
                        android:background="@drawable/poly_db"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WALLPAPERS"
                        android:textColor="@color/blue_600"
                        android:singleLine="false"
                        android:layout_marginTop="175dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="12dp"
                        android:maxLines="4"
                        android:textSize="18sp"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentTop="false"
                        android:gravity="right"
                        android:typeface="normal"
                        android:textIsSelectable="false"
                        android:textStyle="bold" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>

